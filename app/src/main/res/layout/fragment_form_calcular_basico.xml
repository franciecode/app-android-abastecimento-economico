<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FormCalcularBasicoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/grid_space"
            android:layout_marginRight="@dimen/grid_space"
            android:contentDescription="@string/atencao"
            android:src="@drawable/ic_warning" />

        <TextView
            android:id="@+id/textViewPorcentagemEconomia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descricao_alerta_calculo_por_basico" />
    </LinearLayout>

</FrameLayout>