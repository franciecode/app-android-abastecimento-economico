<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/grid_space"
    android:layout_margin="@dimen/grid_small">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_space">

        <TextView
            android:id="@+id/tipoCalculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Tipo Calculo"
            android:textSize="@dimen/text_body_medium" />

        <TextView
            android:id="@+id/dataAbastecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="25/01/2021 10:11" />

        <TextView
            android:id="@+id/descricaoAbastecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipoCalculo"
            android:layout_marginTop="@dimen/grid_space"
            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
            android:text="descrição"
            android:textSize="@dimen/text_body_medium" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricaoAbastecimento"
            android:layout_marginTop="@dimen/grid_space"
            android:text="Abastecido com Álcool: Litros 48.7 \nTotal: R$348,35 | Economia: R$ 35,7"
            android:textSize="@dimen/text_body_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>