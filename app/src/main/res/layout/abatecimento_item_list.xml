<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_small"
    android:orientation="vertical"
    android:padding="@dimen/grid_space">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_space">

        <TextView
            android:id="@+id/tipoCalculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/tipo_calculo"
            android:textSize="@dimen/text_body_medium"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/dataAbastecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="@string/exemplo_data_hora"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/descricaoAbastecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipoCalculo"
            android:layout_marginTop="@dimen/grid_space"
            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
            android:layout_centerHorizontal="true"
            android:text="@string/descricao"
            android:textSize="@dimen/text_body_medium"
            android:drawableStart="@drawable/ic_baseline_directions_car_24"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/detalhesAbastecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricaoAbastecimento"
            android:layout_marginTop="@dimen/grid_space"
            android:gravity="center_horizontal"
            android:text="@string/exemplo_resumo_abastecimento"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="@dimen/text_body_medium" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>